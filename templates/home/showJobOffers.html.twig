{% extends 'base.html.twig' %}

{% block title %}JobOffer index{% endblock %}

{% block body %}
<div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Jobs Offers</h2>
                        <span class="white-text">Welcome on board</span>
                        <ol class="breadcrumb">
                            <li><a href="#!">Home</a></li>
                            <li class="active">Jobs Offers</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>


        <!-- Page Content-->
        <section class="section-padding gray-bg log-section">
            <div class="container">
                <div class="row">

                    <table class="table">
                        <thead>
                            <tr>
                                {#<th>Id</th>#}
                                <th>Description</th>
                                <th>Active</th>
                                <th>Notes</th>
                                <th>JobTitle</th>
                                <th>ContractType</th>
                                <th>Location</th>
                                {#<th>ClosingDate</th>#}
                                <th>Salary</th>
                                <th>CreatedAt</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for jobOffer in jobOffers %}
                             <tr>
                                <td>{{ jobOffer.id }}</td>
                                <td>{{ jobOffer.description }}</td>
                                <td>{{ jobOffer.active ? 'Yes' : 'No' }}</td>
                                <td>{{ jobOffer.notes }}</td>
                                <td>{{ jobOffer.jobTitle }}</td>
                                <td>{{ jobOffer.contractType }}</td>
                                <td>{{ jobOffer.location }}</td>
                                <td>{{ jobOffer.closingDate ? jobOffer.closingDate|date('Y-m-d') : '' }}</td>
                                <td>{{ jobOffer.salary }}</td>
                                <td>{{ jobOffer.createdAt ? jobOffer.createdAt|date('Y-m-d H:i:s') : '' }}</td>

                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="11">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                    

                </div>
            </div>
        </section>

    </div>

</div>


    
{% endblock %}
