{% extends 'base.html.twig' %}



{% block title %}Client index{% endblock %}

{% block stylesheets %} 
    <link href="{{ asset('assets/css/client.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SocietyName</th>
                <th>ContactName</th>
                <th>ContactPosition</th>
                <th>ContactPhone</th>
                <th>ContactEmail</th>
                <th>Notes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.societyName }}</td>
                <td>{{ client.contactName }}</td>
                <td>{{ client.contactPosition }}</td>
                <td>{{ client.contactPhone }}</td>
                <td>{{ client.contactEmail }}</td>
                <td>{{ client.notes }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}" class="btn btn gradient secondary waves-effect waves-light btn-client">show</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn gradient secondary waves-effect waves-light btn-client">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}" class="btn btn-md primary waves-effect waves-light">Create new</a>
{% endblock %}
